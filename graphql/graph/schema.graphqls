type Account {
  id: ID!
  name: String!
  user: User!
  active: Boolean!
}

type User {
  id: ID!
  name: String!
  accounts: [Account!]!
}

type Query {
  users: [User!]!
  accounts: [Account!]!
}

input NewAccount {
  name: String!
  userId: String!
}

input NewUser {
  name: String!
}

type Mutation {
  createAccount(input: NewAccount!): Account!
  createUser(input: NewUser!): User!
}

type Subscription {
  userAdded: User!
}
